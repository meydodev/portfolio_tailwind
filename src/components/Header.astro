{/*Script para cambiar el color de fondo del nav al hacer scroll */}
<script is:inline >
window.addEventListener('scroll', () => {
  const nav = document.getElementById('mainNav');
  if (!nav) return;

  if (window.scrollY > 10) {
    nav.classList.add('bg-white', 'dark:bg-gray-700', 'shadow-lg');
    nav.classList.remove('bg-transparent', 'dark:bg-transparent');
  } else {
    nav.classList.add('bg-transparent', 'dark:bg-transparent');
    nav.classList.remove('bg-white', 'dark:bg-gray-700', 'shadow-lg');
  }
});
</script>






{/*Script para el cambio de tema oscuro/claro*/}
<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const html = document.documentElement;
    const btn = document.getElementById('toggleDark');
    const icon = document.getElementById('themeIcon');

    function updateIcon() {
      if (html.classList.contains('dark')) {
        icon.classList.remove('bi-sun');
        icon.classList.add('bi-moon');
      } else {
        icon.classList.remove('bi-moon');
        icon.classList.add('bi-sun');
      }
    }

    // Aplica modo guardado
    if (localStorage.getItem('theme') === 'dark') {
      html.classList.add('dark');
    }
    updateIcon();

    if (btn) {
      btn.addEventListener('click', () => {
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
        updateIcon();
        console.log('Theme toggled. Now:', html.classList.contains('dark') ? 'dark' : 'light');
      });
    } else {
      console.warn('Toggle button not found!');
    }
  });
</script>




